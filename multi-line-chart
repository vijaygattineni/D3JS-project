    <head>
        <meta charset="utf-8">
        <title>D3 Test</title>
        <script type="text/javascript" src="d3/d3.v4.min.js"></script>
        <style type="text/css">

        .line1 {
          stroke: #FCA104;
          stroke-width: 6px;
          fill: none;
          opacity: 0.8;
        }
        .line2 {
          stroke: #5584FF;
          stroke-width: 6px;
          fill: none;
          opacity: 0.8;
        }
        .y-axis path{
          stroke-width: 0!important;
        }
        .axis path {
            fill: none;
            stroke: #707070;
            stroke-width: 2;
            shape-rendering: crispEdges;
        }
        .axis line {
            fill: none;
            stroke: #707070;
            stroke-width: 1;
            shape-rendering: crispEdges;
        }
        .axis text {
            font-family: sans-serif;
            font-size: 11px;
            fill: darkgray;
        }
        .grid line {
          stroke: #707070;
          stroke-opacity: 0.7;
          shape-rendering: crispEdges;
          stroke-dasharray: 5,5;
        }
        .grid path {
          stroke-width: 0;
        }
        .tool-tip {
          position:absolute;
          z-index:10;
          visibility:hidden;
          background-color: white;
          color: black;
          border-radius: 5px;
          border: solid 1px;
          font-size: 12px;
          font-family: "Source Sans Pro", sans-serif;
          width: 150px;
        }
        .tool-tip table {
          width: 100%;
        }
        .ttip-div {
          padding: 5px;
          width: 70px;
        }
        </style>
